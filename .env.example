# FunChat Environment Configuration
# Copy this file to .env and fill in your values

# Signaling Server (use your actual server URL in production)
SIGNALING_URL=ws://localhost:8787

# Build Configuration
BUILD_MODE=dev

# Application Info
APP_NAME=FunChat
APP_DOMAIN=localhost

# File Transfer
MAX_CHUNK_SIZE_BYTES=65536

# Logging
LOG_LEVEL=debug

# TURN Server (Optional)
TURN_USERNAME=
TURN_CREDENTIAL=

# ICE Servers (JSON format)
ICE_SERVERS=[{"urls":"stun:stun.l.google.com:19302"}]

# API Security (CHANGE THIS IN PRODUCTION!)
API_KEY=your_secure_random_key_here
